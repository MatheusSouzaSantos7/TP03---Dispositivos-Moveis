<ContentPage
    x:Class="PackageTracker.Views.ResultsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Detalhes do Pacote"
    BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Cabeçalho verde -->
            <Frame BackgroundColor="#006C35" CornerRadius="12" Padding="20" HasShadow="True">
                <Label Text="📦 Detalhes do Pacote"
                       FontSize="22"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
            </Frame>

            <!-- Card principal com dados -->
            <Frame BackgroundColor="White" CornerRadius="15" HasShadow="True" Padding="15">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding PackageInfo.TrackingId, StringFormat='Código: {0}'}"
                           FontAttributes="Bold"
                           TextColor="#1E1E1E" />
                    <Label Text="{Binding PackageInfo.Status, StringFormat='Status: {0}'}"
                           TextColor="#006C35"
                           FontAttributes="Bold" />
                    <Label Text="{Binding PackageInfo.ShippingDate, StringFormat='Enviado em: {0:dd/MM/yyyy}'}"
                           TextColor="#555" />
                    <Label Text="{Binding PackageInfo.EstimatedDeliveryDate, StringFormat='Previsão: {0:dd/MM/yyyy}'}"
                           TextColor="#555" />
                    <Label Text="{Binding PackageInfo.CurrentLocation, StringFormat='Local atual: {0}'}"
                           TextColor="#555" />
                </VerticalStackLayout>
            </Frame>

            <!-- Histórico -->
            <Label Text="Histórico de eventos"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="#1E1E1E"
                   HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding PackageInfo.Events}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               BorderColor="#DADADA"
                               CornerRadius="12"
                               HasShadow="True"
                               Margin="0,5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                       FontAttributes="Bold"
                                       TextColor="#006C35" />
                                <Label Text="{Binding Location}" TextColor="#333" />
                                <Label Text="{Binding Description}" TextColor="#555" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Botão voltar -->
            <Button Text="⬅ Voltar"
                    BackgroundColor="#FFD100"
                    TextColor="#1E1E1E"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    Command="{Binding GoBackCommand}">
                <Button.Shadow>
                    <Shadow Brush="#80000000" Offset="2,2" Radius="6" />
                </Button.Shadow>
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
