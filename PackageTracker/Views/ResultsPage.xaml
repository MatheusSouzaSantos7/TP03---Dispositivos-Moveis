<ContentPage
    x:Class="PackageTracker.Views.ResultsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:PackageTracker.ViewModels"
    Title="Detalhes do Pacote">

    <ContentPage.BindingContext>
        <viewmodels:ResultsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Detalhes do Pacote"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Frame BorderColor="LightGray" CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Informações do Pacote" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           Margin="0,0,0,10" />

                    <Label Text="{Binding PackageInfo.TrackingId, StringFormat='Código de Rastreio: {0}'}" />
                    <Label Text="{Binding PackageInfo.Status, StringFormat='Status: {0}'}" />
                    <Label Text="{Binding PackageInfo.ShippingDate, StringFormat='Data de Envio: {0:dd/MM/yyyy}'}" />
                    <Label Text="{Binding PackageInfo.EstimatedDeliveryDate, StringFormat='Previsão de Entrega: {0:dd/MM/yyyy}'}" />
                    <Label Text="{Binding PackageInfo.CurrentLocation, StringFormat='Localização Atual: {0}'}" />
                </VerticalStackLayout>
            </Frame>

            <Label Text="Histórico de Eventos" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding PackageInfo.Events}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" CornerRadius="8" Margin="0,5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Location}" />
                                <Label Text="{Binding Description}" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Voltar"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="10"
                    Command="{Binding GoBackCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
