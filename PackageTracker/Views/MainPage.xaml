<ContentPage
    x:Class="PackageTracker.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Rastreamento de Pacotes"
    BackgroundColor="#F5F5F5">

    <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">

        <!-- Logo -->
        <Image
            Source="petro_logo.png"
            HeightRequest="90"
            HorizontalOptions="Center" />

        <!-- Título -->
        <Label 
            Text="Acompanhe seu pacote"
            FontSize="26"
            FontAttributes="Bold"
            TextColor="#006C35"
            HorizontalOptions="Center" />

        <!-- Subtítulo -->
        <Label 
            Text="Insira o código de rastreio para verificar o status"
            FontSize="16"
            TextColor="#555"
            HorizontalOptions="Center"
            Margin="0,0,0,15" />

        <!-- Campo de entrada -->
        <Frame
            CornerRadius="15"
            Padding="10"
            BackgroundColor="White"
            HasShadow="True"
            WidthRequest="300"
            BorderColor="#DADADA">

            <Entry
                x:Name="TrackingCodeEntry"
                Placeholder="Ex: BR123456789"
                PlaceholderColor="#999"
                FontSize="16"
                TextColor="#1E1E1E"
                HorizontalOptions="Fill" />
        </Frame>

        <!-- Botão principal -->
        <Button
            Text="Buscar pacote"
            WidthRequest="220"
            BackgroundColor="#006C35"
            TextColor="White"
            FontAttributes="Bold"
            CornerRadius="25"
            HeightRequest="50"
            Clicked="OnSearchClicked">

            <Button.Shadow>
                <Shadow Brush="#80000000" Offset="2,2" Radius="6" />
            </Button.Shadow>
        </Button>

        <!-- Linha divisória visual -->
        <BoxView HeightRequest="1" WidthRequest="200" BackgroundColor="#E0E0E0" Margin="0,30,0,10" />

        <!-- Rodapé -->
        <Label 
            Text="Matheus Souza Solutions"
            FontSize="12"
            TextColor="#888"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>
